@using OutXApp.Core.Models
@model IEnumerable<OutXApp.Core.Models.Appointment>
@{
    ViewBag.Title = "Home Page";
}



<!-- top tiles -->
    <div class="row top_tiles">

        @if (User.IsInRole(RoleName.AdministratorRoleName))
        {
            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="tile-stats">
                    <div class="icon"><i class="fa fa-caret-square-o-right"></i></div>
                    <div class="count Courses"></div>
                    <h3>Total Staff</h3>
                    <p class="count_bottom"><i class="green todaysCourses"> </i> Added From Today</p>
                </div>
            </div>
            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="tile-stats">
                    <div class="icon"><i class="fa fa-check-square-o"></i></div>
                    <div class="count users"></div>
                    <h3>Total Users</h3>
                    <p class="count_bottom"><i class="green activeaccounts"> </i> Active Accounts</p>
                </div>
            </div>
            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="tile-stats">
                    <div class="icon"><i class="fa fa-comments-o"></i></div>
                    <div class="count appointments"></div>
                    <h3>Total Courses</h3>
                    <p class="count_bottom"><i class="green todaysappointments"> </i>  For Today</p>
                </div>
            </div>
        }
        @if (User.IsInRole(RoleName.DoctorRoleName))
        {
            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="tile-stats">
                    <div class="icon"><i class="fa fa-caret-square-o-right"></i></div>
                    <div class="count Courses"></div>
                    <h3>Total Courses</h3>
                    <p class="count_bottom"><i class="green todaysCourses"> </i> Added From Today</p>
                </div>
            </div>
        }


    </div>
<!-- /top tiles -->

@section scripts{
    <script>
        $(document).ready(function () {

            //render total Course
            $.get('../../../Home/TotalCourses', null, function (data) {
                $('.Courses').append(data);
            }, 'json');

            //render total apointments
            $.get('../../../Home/TotalAppointments', null, function (data) {
                $('.appointments').append(data);
            }, 'json');
            //render total doctors
            $.get('../../../Home/TotalDoctors', null, function (data) {
                $('.doctors').append(data);
            }, 'json');
            //render total users
            $.get('../../../Home/TotalUsers', null, function (data) {
                $('.users').append(data);
            }, 'json');
            //render todays Courses
            $.get('../../../Home/TodaysCourses', null, function (data) {
                $('.todaysCourses').append(data);
            }, 'json');
            //Today's appointments
            $.get('../../../Home/TodaysAppointments', null, function (data) {
                $('.todaysappointments').append(data);
            }, 'json');
            //render available doctors
            $.get('../../../Home/AvailableDoctors', null, function (data) {
                $('.availabledoctors').append(data);
            }, 'json');
            //ActiveAccounts
            $.get('../../../Home/ActiveAccounts', null, function (data) {
                $('.activeaccounts').append(data);
            }, 'json');


        });
    </script>
}